@page "/"
@using Application.Contracts
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavManager

@code {
    [CascadingParameter] public Task<AuthenticationState>? ClientAuthState { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await authService.CreateAdmin();
            //If user is authenticated send to home
            if ((await ClientAuthState!).User.Identity!.IsAuthenticated == true)
                NavManager.NavigateTo("/home", false, true);
            // If not send to login
            else
                NavManager.NavigateTo("/login", false, true);
        }
        catch
        {
            NavManager.NavigateTo("/login", false, true);
        }
    }


}