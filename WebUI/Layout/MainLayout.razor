@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Color="Color.Transparent" Elevation="1">

        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <span>
            Hi,
            <AuthorizeView>
                <Authorized>@context.User.Identity!.Name</Authorized>
                <NotAuthorized>Guest</NotAuthorized>
            </AuthorizeView>
        </span>
        <MudSpacer />

        <AuthorizeView>
            <Authorized>
                <MudAvatar Size="Size.Medium" Color="Color.Primary">@context.User!.Identity!.Name!.Substring(0, 2)</MudAvatar>
                <a class="text-red-600 font-bold " href="logout">Logout</a>
                
            </Authorized>
        </AuthorizeView>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Task Management</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body

        </MudContainer>
    </MudMainContent>
</MudLayout>



@code {
bool _drawerOpen = true;

void DrawerToggle()
{
_drawerOpen = !_drawerOpen;
}

}